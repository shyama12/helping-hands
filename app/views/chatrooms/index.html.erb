<div class="container my-5 p-5 d-flex flex-column justify-content-center align-items-center bg-white">
  <% @chatroom_users.each do |chatroom_user| %>
    <%= link_to chatroom_path(chatroom_user.chatroom), class: "chatroom-card" do %>
      <div class="bg-light m-2 d-flex border shadow-sm w-100">
        <div class="py-2 px-5 text-center">
          <div class="fs-1">
            <% if chatroom_user.new_messages.zero? %>
              <i class="fa-solid fa-envelope-open"></i>
            <% else %>
              <i class="fa-solid fa-envelope"></i>
            <% end %>
          </div>
          <p class="badge bg-primary rounded-pill"><%= pluralize chatroom_user.new_messages, "unread message" %></p>
        </div>
        <div class="py-2">
          <h3>#<%= chatroom_user.chatroom.name %></h3>
          <p><%= chatroom_user.chatroom.messages.last.content %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
