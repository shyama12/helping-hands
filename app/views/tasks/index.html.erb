
<div class="container">
    <%# <div class="emptyResult"> %>
  <% if @tasks.empty? %>
      <h1><em class="text-muted">Be the first one to create a task</em> in <%= params[:query] %> or just <%= link_to "try again", root_path %></h1>
      <%= link_to "Create a Task",  new_task_path,  class: "btn btn-primary" %>
    <%# </div> %>
  <% else %>
    <h1 class="py-5"> Where can you get help <% if params[:query].present? %> in <%= params[:query] %>? <% end %> </h1>
     <div class="wrapperContainer">
        <div class="cards">
          <% @tasks.each do |task| %>
            <%= render "task", task: task %>
          <% end %>
        </div>
        <div id="map" style="width: 100%;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
    <% end %>
</div>
