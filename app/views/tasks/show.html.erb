<div class="container my-5 p-5 bg-white">
  <h1><%= @task.title %></h1>
  <% if @task.user == current_user %>
  <div class="d-flex">
    <div class="me-3">
      <%= link_to '<p><i class="fa-solid fa-pencil"></i></p>'.html_safe, edit_task_path(@task), class: "text-black" %>
    </div>
    <div class="me-3">
      <%= link_to '<p><i class="fa-solid fa-trash-can"></i></p>'.html_safe, task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" },class: "text-black" %>
    </div>
  </div>
  <% end %>
  <div class="py-5">
    <div class="info-box">
        <h5><strong>Details</strong></h5>
        <p><strong>Date</strong>: <%= @task.date_time.strftime('%Y %B %e') %></p>
        <p><strong>Time</strong>: <%= @task.date_time.strftime('%l:%M %p') %></p>
    </div>
    <div class="info-box">
      <h5><strong>Location</strong></h5>
      <p><%= @task.address %></p>
      <div class="d-flex align-items-center justify-content-center">
        <div id="map" style="width: 100%; height:200px;" class="col-12 col-lg-6 my-4"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
    <div class="info-box">
      <h5><strong>Description</strong></h5>
      <p><%= @task.description %></p>
    </div>
    <% unless @task.user == current_user %>
      <div class="info-box">
        <h5><strong>Owner profile</strong></h5>
        <br>
        <div class="owner-details">
          <%= cl_image_tag @task.user.photo.key, class: "owner-pic" %>
          <div class="py-3">
            <h5><strong><%= @task.user.first_name %> <%= @task.user.last_name %></strong></h5>
          </div>
          <div class="d-flex flex-row justify-self-end">
            <div class="mx-3"><%= link_to "Apply for this task", task_task_applications_path(@task), data: { turbo_method: :post}, class: "btn btn-primary" %></div>
            <div class="mx-3"><%= link_to "View Profile", profile_user_path(@task.user), class: "btn btn-primary" %></div>
            <div class="mx-3"><%= link_to "Contact owner", new_chatroom_path(chat_user: @task.user.id), class: "btn btn-primary" %></div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
