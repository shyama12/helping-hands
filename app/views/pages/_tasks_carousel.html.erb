<% if tasks.count > 8 %>
  <div id="<%= carousel_controls %>xl" class="carousel slide d-none d-xl-block" data-interval="false">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="task-cards-wrapper">
          <% tasks[0...3].each do |task| %>
            <%= render "tasks/task", task: task %>
          <% end %>
        </div>
      </div>
      <div class="carousel-item">
          <div class="task-cards-wrapper">
            <% tasks[3...6].each do |task| %>
              <%= render "tasks/task", task: task %>
            <% end %>
          </div>
      </div>
      <div class="carousel-item">
          <div class="task-cards-wrapper">
            <% tasks[6...9].each do |task| %>
              <%= render "tasks/task", task: task %>
            <% end %>
          </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#<%= carousel_controls %>xl" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#<%= carousel_controls %>xl" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div id="<%= carousel_controls %>lg" class="carousel slide d-none d-lg-block d-xl-none" data-interval="false">
    <div class="carousel-inner">
      <div class="carousel-item active">
