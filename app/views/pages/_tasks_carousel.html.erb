    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#<%= carousel_controls %>lg" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#<%= carousel_controls %>lg" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div id="<%= carousel_controls %>md" class="carousel slide d-lg-none" data-interval="false">
